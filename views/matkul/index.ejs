<%- include('../includes/header'); %>

  <div class="container">
    <h2>
      Semua Mata Kuliah
    </h2>
    <li><a class="btn btn-primary btn-sm" href="#"
      onclick="openForm('matkuls/create', 'create')">
        <span class="me-3"> Create</span></a>
    </li>
    <table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Kode Matkul</th>
      <th>Nama Matkul</th>
      <th>NIDN</th>
      <th>NIM</th>
    </tr>
  </thead>
  <tbody>
    <% 
      no = 1
      matkuls.forEach(matkuls => { %>
      <tr>
        <td><%= no++ %></td>
        <td><%= matkuls.kode_matkul %></td>
        <td><%= matkuls.nama_matkul %></td>
        <td><%= matkuls.nidn %></td>
        <td><%= matkuls.nim %></td>
        <td>
          <a onclick="openForm('/matkuls/edit/<%= matkuls.kode_matkul %>', 'create')">
            <button class="btn btn-primary">
              Edit
            </button>
          </a>
          <a href="/matkuls/delete/<%= matkuls.kode_matkul %>">
            <button class="btn btn-danger">
              Delete
            </button>
          </a>
        </td>
      </tr>
    <% }); %>
  </tbody>
</table>
</div>
  <%- include('../includes/footer'); %>
